# Steer â€” Headless Browser for AI Agents
# Copy to .env and customize as needed

# Server
STEER_PORT=3000
STEER_HOST=0.0.0.0
STEER_LOG_LEVEL=info

# Browser
STEER_HEADLESS=true
STEER_BROWSER=firefox
STEER_VIEWPORT_WIDTH=1280
STEER_VIEWPORT_HEIGHT=720
# STEER_EXECUTABLE_PATH=        # Custom browser binary path

# Sessions
STEER_MAX_SESSIONS=10
STEER_SESSION_TIMEOUT_MS=300000

# Request handling
STEER_REQUEST_TIMEOUT_MS=30000

# Resource blocking (comma-separated: image,font,media,stylesheet,script)
STEER_BLOCK_RESOURCES=image,font,media

# Domain allowlist (comma-separated, empty = allow all)
# STEER_ALLOWED_DOMAINS=github.com,google.com

# MCP HTTP transport
STEER_MCP_PORT=3001
