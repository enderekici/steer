{
  "name": "steer",
  "version": "1.2.0",
  "description": "API-Based Browser Without API Key â€” A free, self-hosted headless browser for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "steer": "dist/cli.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "mcp": "node dist/mcp/server.js",
    "mcp:dev": "tsx src/mcp/server.ts",
    "mcp:http": "node dist/cli.js --mcp-http",
    "mcp:http:dev": "tsx src/cli.ts --mcp-http",
    "build": "tsup src/index.ts src/cli.ts src/mcp/server.ts --format esm --dts --clean",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "biome check src test",
    "lint:fix": "biome check --write src test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "browser",
    "agent",
    "headless",
    "automation",
    "mcp",
    "ai",
    "playwright",
    "firefox"
  ],
  "author": "Ender Ekici",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/enderekici/steer.git"
  },
  "homepage": "https://github.com/enderekici/steer#readme",
  "bugs": {
    "url": "https://github.com/enderekici/steer/issues"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/rate-limit": "^10.3.0",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@mozilla/readability": "^0.6.0",
    "fastify": "^5.7.4",
    "fastify-plugin": "^5.0.3",
    "linkedom": "^0.18.12",
    "nanoid": "^5.1.6",
    "pino": "^10.3.1",
    "playwright": "^1.58.2",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "pino-pretty": "^13.1.3",
    "@types/node": "^25.2.3",
    "@types/turndown": "^5.0.6",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
