{
  "name": "steer",
  "version": "1.2.0",
  "description": "API-Based Browser Without API Key â€” A free, self-hosted headless browser for AI agents",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "steer": "dist/cli.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "mcp": "node dist/mcp/server.js",
    "mcp:dev": "tsx src/mcp/server.ts",
    "mcp:http": "node dist/cli.js --mcp-http",
    "mcp:http:dev": "tsx src/cli.ts --mcp-http",
    "build": "tsup src/index.ts src/cli.ts src/mcp/server.ts --format esm --dts --clean",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src test",
    "lint:fix": "biome check --write src test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "browser",
    "agent",
    "headless",
    "automation",
    "mcp",
    "ai",
    "playwright",
    "firefox"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.0",
    "@fastify/rate-limit": "^10.2.0",
    "@modelcontextprotocol/sdk": "^1.5.0",
    "@mozilla/readability": "^0.6.0",
    "fastify": "^5.2.0",
    "linkedom": "^0.18.0",
    "nanoid": "^5.0.9",
    "pino": "^10.3.0",
    "pino-pretty": "^13.0.0",
    "playwright": "^1.50.0",
    "turndown": "^7.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/node": "^25.2.2",
    "@types/turndown": "^5.0.5",
    "biome": "^0.3.3",
    "tsup": "^8.3.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^4.0.18"
  }
}
