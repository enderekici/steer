{
  "name": "abbwak",
  "version": "1.1.0",
  "description": "API-Based Browser Without API Key â€” A free, self-hosted headless browser for AI agents",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "abbwak": "src/cli.ts"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "start": "tsx src/index.ts",
    "mcp": "tsx src/mcp/server.ts",
    "build": "tsup src/index.ts src/cli.ts src/mcp/server.ts --format esm --dts --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src test",
    "lint:fix": "biome check --write src test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": ["browser", "agent", "headless", "automation", "mcp", "ai", "playwright"],
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "playwright": "^1.50.0",
    "@mozilla/readability": "^0.5.0",
    "linkedom": "^0.18.0",
    "turndown": "^7.2.0",
    "fastify": "^5.2.0",
    "@fastify/rate-limit": "^10.2.0",
    "@fastify/cors": "^11.0.0",
    "@modelcontextprotocol/sdk": "^1.5.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "nanoid": "^5.0.9",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.12.0",
    "@types/turndown": "^5.0.5",
    "typescript": "^5.7.0",
    "tsx": "^4.19.0",
    "tsup": "^8.3.0",
    "vitest": "^3.0.0",
    "biome": "^0.3.3",
    "@biomejs/biome": "^1.9.0"
  }
}
